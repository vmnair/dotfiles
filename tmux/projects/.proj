#!/bin/bash

# tmux setup Neovim configurationa  


if ! tmux has-session -t LearnC
then

# Neovim 
tmux new-session -s LearnC -n Neovim -d 
tmux send-keys -t LearnC:1 'cd ~/projects/learn/C' C-m
tmux send-keys -t LearnC:1 'vim .' C-m

# Create horizontal split and start claude code
tmux split-window -h -t LearnC:1
tmux send-keys -t LearnC:1.2 'cd ~/projects/learn/C' C-m
tmux send-keys -t LearnC:1.2 'claude' C-m


# Console Window
tmux new-window -n Console -t LearnC
tmux send-keys -t LearnC:2  'cd ~/projects/learn/C' C-m
# tmux send-keys -t LearnC:2  'nv' C-m
tmux send-keys -t LearnC:2  'clear' C-m

# Create horizontal split and show the notes folder 
tmux split-window -h -t LearnC:2
tmux send-keys -t LearnC:2.2 'cd ~/notebook/dev/c/dsa' C-m
tmux send-keys -t LearnC:2.2  'clear' C-m
tmux send-keys -t LearnC:2.2 'vim .' C-m

# Select the Neovim window
tmux select-window -t LearnC:1
tmux select-pane -t LearnC:1.1    
fi

# No running session, so start a new session 
tmux attach -t LearnC



