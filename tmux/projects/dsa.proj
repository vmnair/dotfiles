
#!/bin/bash

# tmux setup for learning datastructures & algorithms. 


if ! tmux has-session -t LearnDSA
then

# Neovim 
tmux new-session -s LearnDSA -n Neovim -d 
tmux send-keys -t LearnDSA:1 'cd ~/projects/Learn/dsa' C-m
tmux send-keys -t LearnDSA:1 'vim .' C-m

# Create horizontal split and start claude code
tmux split-window -h -t LearnDSA:1
tmux send-keys -t LearnDSA:1.2 'cd ~/projects/Learn/dsa' C-m
tmux send-keys -t LearnDSA:1.2 'claude' C-m


# Console Window
tmux new-window -n Console -t LearnDSA
tmux send-keys -t LearnDSA:2  'cd ~/projects/Learn/dsa' C-m
tmux send-keys -t LearnDSA:2  'clear' C-m

# Create horizontal split and show the notes folder 
tmux split-window -h -t LearnDSA:2
tmux send-keys -t LearnDSA:2.2 'cd ~/notebook/dev/c/dsa' C-m
tmux send-keys -t LearnDSA:2.2  'clear' C-m
tmux send-keys -t LearnDSA:2.2 'vim .' C-m

# Select the Neovim window
tmux select-window -t LearnDSA:1
tmux select-pane -t LearnDSA:1.1    
fi

# No running session, so start a new session 
tmux attach -t LearnDSA



