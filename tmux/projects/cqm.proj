#!/bin/bash

# tmux setup CQM development


if ! tmux has-session -t='CQM' 2>/dev/null
then

# Neovim 
tmux new-session -s CQM -n Neovim -d 
tmux send-keys -t CQM:1 'cd ~/Projects/cqm' C-m
tmux send-keys -t CQM:1 'vim .' C-m

# Create horizontal split and start claude code
tmux split-window -h -t CQM:1
tmux send-keys -t CQM:1.2 'cd ~/Projects/cqm' C-m
tmux send-keys -t CQM:1.2 'claude' C-m
# tmux split-window -v -t CQM:1.2
# tmux send-keys -t CQM:1.3 'copilot' C-m


# Console Window
tmux new-window -n Console -t CQM
tmux send-keys -t CQM:2  'cd ~/Projects/cqm' C-m
# tmux send-keys -t CQM:2  'nv' C-m
tmux send-keys -t CQM:2  'clear' C-m


# Lazygit
tmux new-window -n Lazygit -t CQM
tmux send-keys -t CQM:3  'cd ~/Projects/cqm' C-m
tmux send-keys -t CQM:3  'lg' C-m
# tmux send-keys -t CQM:2  'clear' C-m

# Select the Neovim window
tmux select-window -t CQM:1
tmux select-pane -t CQM:1.1    
fi

# Ensure session exists, then attach
tmux attach -t CQM



