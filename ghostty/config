# ghostty configuration
# Vinod Nair MD Start as an interactive shell. As login shell will show message 
font-size = 16
theme = "tokyonight night" 
macos-auto-secure-input = true
macos-secure-input-indication = true 
macos-titlebar-style = "transparent" 
auto-update = download
copy-on-select = true
quit-after-last-window-closed = true
shell-integration = zsh
font-family = JetBrains Mono
mouse-hide-while-typing = true
scrollback-limit = 100000
window-save-state = always

# keybinding (leader: Ctrl+Space)

# Reload
keybind = ctrl+space>r=reload_config

# Start fullscreen
fullscreen = true 
# Toggle fullscreen
keybind = ctrl+space>f=toggle_fullscreen

# Open quick terminal
keybind = ctrl+space>t=toggle_quick_terminal

# Split navigation (vim-style)
keybind = ctrl+space>h=goto_split:left
keybind = ctrl+space>j=goto_split:down
keybind = ctrl+space>k=goto_split:up
keybind = ctrl+space>l=goto_split:right

# Split resize
keybind = ctrl+space>up=resize_split:up,20
keybind = ctrl+space>down=resize_split:down,20
keybind = ctrl+space>left=resize_split:left,21
keybind = ctrl+space>right=resize_split:right,20

# Shift+Enter to insert a newline without sending the command
keybind = shift+enter=text:\n


