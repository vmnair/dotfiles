# ghostty configuration
# Vinod Nair MD Start as an interactive shell. As login shell will show message 
font-size = 16 
theme = "tokyonight night" 
macos-auto-secure-input = true
macos-secure-input-indication = true 
macos-titlebar-style = "transparent" 
auto-update = download
copy-on-select = true
quit-after-last-window-closed = true
# quick-terminal = true

# keybinding
keybind = cmd+f=toggle_fullscreen
#open quick terminal with cmd+`
keybind = cmd+`=toggle_quick_terminal

# Split navigation
keybind = cmd+h=goto_split:left
keybind = cmd+j=goto_split:down
keybind = cmd+k=goto_split:up
keybind = cmd+l=goto_split:right

fullscreen = false 

# Press Shift+Enter to insert a newline without sending the command
keybind = shift+enter=text:\n
