# FZF configuration
# Set up fzf key bindings and fuzzy completion
eval "$(fzf --zsh)"

# Preview file content using bat (https://github.com/sharkdp/bat)
export FZF_CTRL_T_OPTS="
  --walker-skip .git,node_modules,target
  --preview 'bat -n --color=always {}'
  --bind 'ctrl-/:change-preview-window(down|hidden|)'"



# zoxide configuration
eval "$(zoxide init zsh --cmd cd)"

# pyenv config
export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"

export NVM_DIR="$HOME/.nvm"
  [ -s "/opt/homebrew/opt/nvm/nvm.sh" ] && \. "/opt/homebrew/opt/nvm/nvm.sh"  # This loads nvm
  [ -s "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm" ] && \. "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm"  # This loads nvm bash_completion


# Clear CopilotChat History

alias copilotchat_clean="rm ~/.local/share/nvim/copilotchat_history/*.json"

# Ollama API base_URL
export OLLAMA_API_BASE=http://127.0.0.1:11434

# Tmux configuration
tmux_sessionizer() {
  zle push-input
  BUFFER="$HOME/dotfiles/tmux/smart-sessionizer.sh"
  zle accept-line
}

zle -N tmux_sessionizer # register above function as a zle widget
bindkey '^S' tmux_sessionizer # bind the widget to Ctrl+S





